{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/./master/nextflow_schema.json",
    "title": "CDCgov/MycoID",
    "workflow_title": "Mycology Identification Workflow",
    "description": "Fungal Species Identification using nanopore sequencing data.",
    "url": "https://github.com/CDCgov/MycoID",
    "type": "object",
    "properties": {
        "input": {
            "type": "string",
            "description": "Path to the input directory including all samples"
        },
        "output": {
            "type": "string",
            "default": "results",
            "description": "Path to output directory. Default: 'results'"
        },
        "user": {
            "type": "string",
            "description": "CDC User ID"
        },
        "percent": {
            "type": "integer",
            "default": 98,
            "description": "Minimum percent identity"
        },
        "length_limit": {
            "type": "integer",
            "default": 1500,
            "description": "Maximum read length for ONT reads"
        },
        "length_required": {
            "type": "integer",
            "default": 900,
            "description": "Minimum read length for ONT reads"
        }
    }
}

       