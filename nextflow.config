params {
    input = ''
    output = 'results'
    user = ''
    version = '0.1.0'
    percent = 98
    length_limit = 1500
    length_required = 900
}

profiles {
    singularity {
        singularity.enabled = true
        process {
            withName: downloadBlastDB {
                container = 'ncbi/blast:latest'
            }
        }
        process {
            withName: fastp {
                container = 'staphb/fastplong:latest'
            }
        }
        process {
            withName: downsample {
                container = 'staphb/ontime:latest'
            }
        }
        process {
            withName: consensus {
                container = 'medicinalgenomics/ngspeciesid:latest'
            }
        }
        process {
            withName: qcReport {
                container = 'quay.io/biocontainers/jq:1.5--4'
            }
        }
        process {
            withName: blast {
                container = 'staphb/blast'
            }
        }
    }

}